<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textItem0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/t5"
        android:textSize="30dp"
        android:textColor="@color/colorblack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:src="@drawable/s0"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/iconItem1"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.88"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"

            android:layout_weight="1">

            <TextView
                android:id="@+id/textItem1"
                android:text="@string/t1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="@color/colorblack"
                android:visibility="visible" />

            <TextView
            android:id="@+id/textItem2"
            android:text="@string/t2"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left|center"
            android:textColor="@color/colorPrimary"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/textItem3"
                    android:text="@string/t3"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/colorAccent"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/iconItem2"
                    android:src="@drawable/s6"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:gravity="start" />

            </LinearLayout>




        </LinearLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/textItem4"
        android:text="@string/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:textColor="@color/colorblack"
        android:textSize="20dp"
        android:visibility="visible"
        />



    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>


</LinearLayout>